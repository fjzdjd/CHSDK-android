<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="vertical">

    <View
        android:id="@+id/line_top"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"

        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <ImageView
                android:id="@+id/img_carImage"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/img_heard"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_seriesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="宝马5系宝马"

                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txt_telNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="180*****101"

                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/txt_isBaojia"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="0"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_outside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_carName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"


                    android:textSize="11sp"/>

                <LinearLayout
                    android:id="@+id/layout_inside"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_carColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"

                        android:gravity="center"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="宝蓝"

                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/txt_payMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:paddingBottom="0.5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="全款"

                        android:textSize="11sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/txt_beginDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2015/7/1"

                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line_below"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        />

    <View
        android:id="@+id/line_last"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"

        android:visibility="gone"/>

</LinearLayout>